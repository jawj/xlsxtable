{
  "name": "xlsxy",
  "version": "0.1.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "buildCjs": "esbuild index.ts --bundle --format=cjs --minify --loader:.xml=text --outfile=index.js",
    "buildEsm": "esbuild index.ts --bundle --format=esm --minify --loader:.xml=text --outfile=index.mjs",
    "build": "npm run buildCjs && npm run buildEsm"
  },
  "keywords": [
    "xlsx",
    "Excel",
    "zip"
  ],
  "author": "George MacKerron",
  "license": "MIT",
  "dependencies": {
    "littlezip": "^0.1.3",
    "zipcelx": "^1.6.2"
  },
  "devDependencies": {
    "esbuild": "^0.20.1",
    "typescript": "^5.4.2"
  }
}
